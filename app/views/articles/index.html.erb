<p style="color: green"><%= notice %></p>

<h1>Articles</h1>

<h3><%= link_to 'Home', root_path %></h3>

<%= form_with url: articles_path, method: :get, local: true, html: { class: 'row' } do %>
  <div class="col-auto">
    <%= text_field_tag :query, params[:query], placeholder: 'Search articles', class: 'form-control' %>
  </div>
  <div class="col-auto">
    <%= submit_tag 'Search', class: 'btn btn-primary mb-3' %>
  </div>
<% end %>

<div id="articles">
  <div class="row">
    <% @articles.each do |article| %>
      <div class="col-4">
        <%= render article %>
        <p><%= link_to "Show this article", article %></p>
      </div>
    <% end %>

    <%= will_paginate @articles %>
  </div>
</div>

<%= link_to "New article", new_article_path %>
