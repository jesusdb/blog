<style>
  body {
    padding-left: 200px;
  }
  .sidebar {
    width: 200px;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    background-color: #f8f9fa;
    padding-top: 20px;
  }
</style>

<div class="sidebar">
  <h4 class="text-center">Related Articles</h4>
  <ul class="nav flex-column">
    <% @external_articles.each do |article| %>
      <li class="nav-item">
        <%= link_to article['title'], article['url'], class: 'nav-link' %>
      </li>
    <% end %>
  </ul>
</div>
